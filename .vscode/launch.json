  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Cargo test",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--lib"
        ]
      },
      "args": []
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library 'advent-of-code-2022'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--lib",
          "--package=advent-of-code-2022"
        ],
        "filter": {
          "name": "advent-of-code-2022",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'main'",
      "cargo": {
        "args": [
          "build",
          "--bin=main",
          "--package=advent-of-code-2022"
        ],
        "filter": {
          "name": "main",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'main'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=main",
          "--package=advent-of-code-2022"
        ],
        "filter": {
          "name": "main",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}